<Window x:Class="Breadit.SecondaryWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Breadit"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="Breddit" Height="1000" Width="1000" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <StackPanel>
            <!--Page title-->
            <Label FontSize="15" FontWeight="Bold" Content="Breddit Web View" HorizontalAlignment="Center" />
            <!--A WebBrowser-->
            <WebBrowser HorizontalAlignment="Center" VerticalAlignment="Center" Height="500" Width="400" Name="Browser" />
            <!--Button to return to MainWindow--> 
            <Button x:Name="returnButton" Content="Return" HorizontalAlignment="Center"  VerticalAlignment="Top" Width="99" Height="24" Background="#FFAE00FF" Click="Return_Click" />
        </StackPanel>
    </Grid>
</Window>

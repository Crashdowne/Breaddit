<Window x:Class="Breadit.SecondaryWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Breadit"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="Breddit" 
        MaxHeight="1000" 
        Height="700" 
        MaxWidth="1000" 
        Width="500" 
        WindowStyle="ThreeDBorderWindow">
    <Grid>
        <DockPanel>
            <Grid DockPanel.Dock="Top">
                <Label FontSize="15" FontWeight="Bold" Content="Breddit" HorizontalAlignment="Center" />
            </Grid>
            <Grid DockPanel.Dock="Bottom">
                <!--Button to return to MainWindow-->
                <Button x:Name="returnButton" Content="Return" HorizontalAlignment="Center"  VerticalAlignment="Top" Width="99" Height="24" Background="#FFAE00FF" Click="Return_Click" />
                <TextBlock Text="Doc Panel Bottom" FontSize="15" HorizontalAlignment="Left"/>
            </Grid>
            <Grid>
                <!--Free Middle Area-->
                <!--A WebBrowser-->
                <WebBrowser Name="Browser" />
            </Grid>
            </DockPanel>
    </Grid>
</Window>
